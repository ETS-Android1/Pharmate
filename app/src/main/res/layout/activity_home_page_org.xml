<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundgradient"
    tools:context="homepage.HomePageOrg">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="0dp"
        android:layout_height="97dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/fugaz_one"
        android:text="Welcome to Pharmate"
        android:textAlignment="center"
        android:textColor="#CFB8B8"
        android:textColorHint="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/about1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/organization1"
            app:layout_constraintTop_toBottomOf="@+id/profile1">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_about" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/profile1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/about1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/request1"
            app:layout_constraintTop_toBottomOf="@+id/search1">

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_user" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/search1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="187dp"
            android:layout_marginEnd="41dp"
            android:layout_marginBottom="23dp"
            app:layout_constraintBottom_toTopOf="@+id/profile1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/donate1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_search" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/donate1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="47dp"
            android:layout_marginTop="189dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="21dp"
            app:layout_constraintBottom_toTopOf="@+id/request1"
            app:layout_constraintEnd_toStartOf="@+id/search1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_care" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/organization1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/about1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/request1">

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_bank" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/request1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="46dp"
            android:layout_marginEnd="36dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/organization1"
            app:layout_constraintEnd_toStartOf="@+id/profile1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/donate1">

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="103dp"
                app:srcCompat="@drawable/ic_request" />
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>