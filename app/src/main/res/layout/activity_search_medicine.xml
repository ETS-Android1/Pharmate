<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="medicine.SearchMedicine"
    android:orientation="vertical"
    android:background="@drawable/gradientbackground">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:ems="10"
        android:fontFamily="@font/fugaz_one"
        android:gravity="center"
        android:text="Search Medicine"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/imageButtonsearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="355dp"
        android:layout_marginTop="12dp"
        android:background="@color/blue"
        app:srcCompat="@drawable/ic_camera_alt_black_24dp"
        tools:ignore="VectorDrawableCompat" />

    <EditText
        android:id="@+id/editTextTextPersonName14"
        android:layout_width="289dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="-38dp"
        android:background="#11AA9E9E"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:hint="Barcode Number"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textColorHint="#F7F2F2"
        android:textSize="16dp" />
    <EditText
        android:id="@+id/editTextTextPersonName13"
        android:layout_width="289dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:background="#11AA9E9E"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:ems="10"
        android:hint="Name Medicine"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/grey"
        android:textColorHint="#F7F2F2"
        android:textSize="16dp" />


    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybluebutton"
        android:layout_marginLeft="150dp"
        android:onClick="searchMedicineClick"
        android:text="Search"
        android:textColor="@color/grey" />

    <Button
        android:id="@+id/request"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mybluebutton"
        android:layout_marginLeft="150dp"
        android:onClick="goRequest"
        android:text="Request"
        android:textColor="@color/grey" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/medicine_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName14"
        app:layout_constraintVertical_bias="0.300" />


</LinearLayout>